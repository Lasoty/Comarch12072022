
<div>
    <form method="post" asp-action="Edit">
        <div class="mb-3">
            <label for="Author" class="form-label">Autor</label>
            <input type="text" class="form-control" id="Author" placeholder="Imie i nazwisko">
        </div>
        <div class="mb-3">
            <label for="Title" class="form-label">Tytuł</label>
            <input type="text" class="form-control" id="Title" placeholder="Tytuł książki">
        </div>
        <div class="mb-3">
            <label for="PageCount" class="form-label">Liczba stron</label>
            <input type="number" class="form-control" id="PageCount">
        </div>
        <div class="mb-3 form-check">
            <label for="IsBorrowed" class="form-label">Czy wypożyczona</label>
            <input type="checkbox" class="form-check-input" id="IsBorrowed">
        </div>
        <div class="mb-3">
            <label class="form-label">Nazwisko wypożyczającego</label>
            <div class="row g-3">
                <div class="col">
                    <input type="text" class="form-control" placeholder="Imię wypożyczającego" aria-label="Imię">
                </div>
                <div class="col">
                    <input type="text" class="form-control" placeholder="Nazwisko wypożyczającego" aria-label="Nazwisko">
                </div>
            </div>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-outline-primary">Zapisz</button>
        </div>
    </form>
</div>